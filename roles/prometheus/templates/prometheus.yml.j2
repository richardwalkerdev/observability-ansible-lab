# Global config
global:
  scrape_interval:     15s
  evaluation_interval: 15s
  scrape_timeout: 15s
  external_labels:
    cluster: prometheus-cluster
    region: europe
    environment: dev

scrape_configs:
  - job_name: 'targets'
    file_sd_configs:
    - files:
      - /etc/prometheus/targets/*.yml

alerting:
  alertmanagers:
  - static_configs:
    file_sd_configs:
    - files:
      - 'alertmanagers/alertmanagers.yml'

rule_files:
  - /etc/prometheus/rules/*.yml
